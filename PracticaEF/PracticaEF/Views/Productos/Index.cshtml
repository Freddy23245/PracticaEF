<div class="container">
    <form method="post" asp-action="PorcentajeAumento" asp-controller="Productos" class="form-inline text-center">
        <div class="form-group mb-2">
                <select name="idProducto" asp-items="@(new SelectList(ViewBag.Productos,"IdProducto","Nombre"))" class="form-control">
                <option value="">Seleccione un producto.</option>
            </select>
        </div>
    <div class="form-group mb-2">
            <select  class="form-control" name="porcentaje">
            <option value="">Seleccione un porcentaje de aumento.</option>
            <option value="10">10%</option>
            <option value="20">20%</option>
            <option value="30">30%</option>
            <option value="40">40%</option>
            <option value="50">50%</option>
            <option value="60">60%</option>
            <option value="70">70%</option>
            <option value="80">80%</option>
            <option value="90">90%</option>
            <option value="100">100%</option>
           </select>
    </div>
    <button type="submit" class="btn btn-primary mb-4">Aplicar Aumento</button>
</form>
    <a class="btn btn-success mb-3" href="@Url.Action("Create","Productos")">Agregar Producto</a>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Stock</th>
                        <th>Precio</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Producto item in ViewBag.Productos)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Stock</td>
                            <td>@item.Precio</td>

                            <td><a asp-action="Modificar" asp-controller="Productos" asp-route-id="@item.IdProducto" class="btn btn-primary">Editar</a></td>
                            <td><a asp-action="Eliminar" onclick="return confirm('¿Desea eliminar el Registro?')" asp-controller="Productos" asp-route-id="@item.IdProducto" class="btn btn-danger">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>