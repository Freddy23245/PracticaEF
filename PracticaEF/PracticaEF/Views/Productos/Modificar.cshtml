@model Producto
<div class="container mt-4">
    <h2>Producto</h2>
    <form asp-action="Modificar" method="post" asp-controller="Productos">
        <div class="form-group">
            <input type="hidden" asp-for="IdProducto" />
            <label for="nombre">Producto</label>
            <input type="text" class="form-control" asp-for="Nombre" placeholder="Ingrese el nombre">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="apellido">Stock</label>
            <input type="number" class="form-control" asp-for="Stock" placeholder="Ingrese el stock">
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="dni">Precio</label>
            <input type="number" class="form-control" asp-for="Precio" placeholder="Ingrese el Precio">
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>