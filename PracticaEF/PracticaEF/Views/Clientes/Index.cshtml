@model Cliente
<div class="container">
    <a class="btn btn-success mb-3" href="@Url.Action("Create","Clientes")">Agregar Cliente</a>
    <a class="btn btn-primary mb-3" href="@Url.Action("Busqueda","Clientes")">Buscar</a>
    <div class="row">

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Dni</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Cliente item in ViewBag.Clientes)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Dni</td>
                            <td>@item.Correo</td>
                            <td>@item.Telefono</td>
                            <td><a asp-action="Modificar" asp-controller="Clientes" asp-route-id="@item.IdCliente" class="btn btn-primary">Editar</a></td>
                            <td><a asp-action="Eliminar" onclick="return confirm('¿Desea eliminar el Registro?')" asp-controller="Clientes" asp-route-id="@item.IdCliente" class="btn btn-danger">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>