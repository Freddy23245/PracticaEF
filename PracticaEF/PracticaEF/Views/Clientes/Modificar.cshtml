@model Cliente
<div class="container mt-4">
    <h2>Formulario para guardar datos</h2>
    <form asp-action="Modificar" method="post" asp-controller="Clientes">
        <div class="form-group">
            <input type="hidden" asp-for="IdCliente" />
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" placeholder="Ingrese su nombre">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="apellido">Apellido</label>
            <input type="text" class="form-control" asp-for="Apellido" placeholder="Ingrese su apellido">
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="dni">DNI</label>
            <input type="text" class="form-control" asp-for="Dni" placeholder="Ingrese su DNI">
            <span asp-validation-for="Dni" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="correo">Correo</label>
            <input type="email" class="form-control" asp-for="Correo" placeholder="Ingrese su correo electrónico">
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="telefono">Teléfono</label>
            <input type="tel" class="form-control" asp-for="Telefono" placeholder="Ingrese su número de teléfono">
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>