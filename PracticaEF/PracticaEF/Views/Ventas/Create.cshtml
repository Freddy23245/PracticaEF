@model Venta
<div class="container mt-4">
    <h2>Nueva Venta</h2>
    <form asp-action="Create" method="post" asp-controller="Ventas">
        <div class="form-group">
            <label for="">Cliente:</label>
            <select asp-for="IdCliente" asp-items="@(new SelectList(ViewBag.Clientes,"IdCliente","NombreCliente"))" class="form-control">
                <option value="">Seleccione un cliente.</option>
            </select>
            <span asp-validation-for="IdCliente" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label for="">Producto</label>
            <select asp-for="IdProducto" asp-items="@(new SelectList(ViewBag.Productos,"IdProducto","Nombre"))" class="form-control">
                <option value="">Seleccione un producto.</option>
            </select>
            <span asp-validation-for="IdProducto" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>